<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@drawable/edit_text_border"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/raName"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="Name: Jonthan Hotop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/raPhoneNumber"
        android:text="Phone Number: 8332691066"
        android:layout_below="@id/raName"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/raEmail"
        android:layout_margin="5dp"
        android:text="Email: JHotop6969@fontbonne.edu"
        android:layout_below="@id/raPhoneNumber"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/raBuildingPos"
        android:text="Building Medaile 308"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:layout_below="@id/raEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/callRA_btn"
        android:text="CALL"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/raBuildingPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>