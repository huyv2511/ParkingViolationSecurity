<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginLeft="60dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ticket ID:"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/row_ticketID"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Date:"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/row_ticketDate"
            android:text="ABC"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="License Plate:"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/row_licensePlate"
            android:text="ABC"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Car State:"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/row_carState"
                android:text="ABC"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Car Color:"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/row_carColor"
                android:text="ABC"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Violation Type:"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/row_violationType"
                android:text="ABC"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="CarModel:"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/row_carModel"
                android:text="ABC"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView_carPic"
            android:layout_width="200dp"
            android:layout_margin="5dp"
            android:layout_height="200dp"/>

    </LinearLayout>
</LinearLayout>